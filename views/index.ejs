<%- include("./partials/_header", {loggedIn: loggedIn, user: user}) %>


<% if(trend != ""){%>
  <section class="hero">
    <div class="hero-cover" data-aos="fade-up" data-aos-delay="500" data-aos-duration="1500">          
      <% for(let i=0; i < trend.length; i++){%> 
      <div class="trending-posts">
            <div class="imgdiv"><img src="<%= trend[i].bannerPath%>" alt=""></div>
            <div class="details">
              <div class="category">
                <%=trend[i].categories[0]%>  
              </div>
              <a href="/<%= trend[i].id%>"><div class="detail-header">
                <%= trend[i].title%>
              </div></a>
              <div class="dets"><%= trend[i].author%> . <%= trend[i].createdAt.toDateString()%></div>
            </div>
          </div>  
          <%}%>      
    </div>
   </section>
<%}%>

       <section class="articles-section">
         <div class="articlescover">

          <% articles.forEach( article =>{ %>
            <div class="articles" data-aos="fade-up" data-aos-delay="500" data-aos-duration="1000">
              <div class="articleimg"><img src="<%= article.bannerPath %>" alt=""></div>
              <div class="articlecontent">
                <div class="createdat dets"> <%= article.createdAt.toDateString() %></div>
                <a href="/<%= article.id %>"> <h1> <%= article.title %> </h1> </a>
                <p>
                  <%= article.description %>
                </p>
              </div>
              <div class="article-card-cat"><% for(let i=0; i < 2; i++ ){%>
                <a href="/categories/<%=article.categories[i]%>"><%= article.categories[i]%></a>
                <%}%>
              </div>
            </div>

          <% }) %>
         
         </div>

        <%- include("./partials/_fepagination", {totalposts: totalposts, currentpage: currentpage})%>
       </section>

       <section class="buzz">
        <div class="buzz-cover"> 
          <div class="popular-post-main-cont">
           <h2 class="popular-posts-header">Popular Posts</h2>
           <div class="popular-posts-cont">  
            <%if(popular){%>
             <% for(let i=0; i< popular.length ; i++){%>
               
              <div class="popular-posts">
                <div class="popular-post-img"><img src="<%= popular[i].bannerPath%>" alt=""></div>
                <div class="popular-post-content">
                  <a href="/<%= popular[i].id%>"><h3 class="pph"><%= popular[i].title %></h3></a>
                  <p class="ppd">By <%= popular[i].author %> on <%= popular[i].createdAt.toDateString()%></p>
                </div>
              </div>
             <%}%>
            <% } %>
 
           </div>
          </div>

          <%- include("./partials/_about") %>

        </div>
      </section>

      <script src="./js/mobilenav.js"></script>

       <%- include("./partials/_footer") %>

  