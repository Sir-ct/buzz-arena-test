        <a href="#"><ion-icon src="./images/Hood-svg.svg"></ion-icon></a>
      </div>
        <div class="socialicons" data-aos="fade-right" data-aos-delay="500" data-aos-duration="1500">
          <a href="#"><ion-icon name="logo-facebook"></ion-icon></a>
          <a href="#"><ion-icon name="logo-twitter"></ion-icon></a>
          <a href="#"><ion-icon name="logo-instagram"></ion-icon></a>
          <a href="#"><ion-icon name="logo-youtube"></ion-icon></a>
          <a href="#"><ion-icon src="./images/Hood-svg.svg"></ion-icon></a>
        </div>
        <div class="logodiv" data-aos="fade-left" data-aos-delay="500" data-aos-duration="1500">
          _BUZZ-ARENA.
        </div>
        <div class="search" data-aos="fade-left" data-aos-delay="500" data-aos-duration="1500">
          <input type="text" placeholder="SEARCH">
          <ion-icon name="search-outline"></ion-icon>
        </div>
        <div class="mobilesearch"></div>
      </div>
      <nav id="navbar">
        <ul>
          <li><a href="/">Home</a> </li>
          <li>Categories
            <ul class="cat-drop">
              <a href="/categories/buzz"><li>Buzz</li></a>
              <a href="/categories/sports"><li>Sports</li></a>
              <a href="/categories/tech"><li>Tech</li></a>
              <a href="/categories/fashion"><li>Fashion</li></a>
            </ul>
          </li>
          <li><a href="/forum">Forum</a></li>
          <li><a href="#about">About</a></li>
          <li><a href="">Contact</a></li>
        </ul>

        <div class="login-signup">
          <% if(loggedIn){%>
         
            <div class="welcome-div">
              <div class="welcome-text" id="welcome-txt">Hi, <%= user.fname%></div>
              <div class="welcome-menu" id="welcome-mnu">
                <% if(user.isadmin == false && user.isauthor == false){%>
                  <div class="dashboard-btn"><a href="/userdashboard">Profile</div>
                  <div class="dashboard-btn"><a href="/updateprofile">Update Profile</a></div>
                <%}%>
                <% if(user.isadmin){%>
                  <div class="dashboard-btn"><a href="/newArticle"> Panel </a></div>
                  <div class="dashboard-btn"><a href="/userdashboard">Dashboard</a></div>
                  <div class="dashboard-btn"><a href="/updateprofile">Update Profile</a></div>
                <% } %>
                <%if(user.isauthor && !user.isadmin){ %>
                  <div class="dashboard-btn"><a href="/userdashboard">Dashboard</a></div>
                  <div class="dashboard-btn"><a href="/updateprofile">Update Profile</a></div>
                <%}%>
                <form action="/logout" method="post">
                  <button>logout</button>
                </form>
              </div>
            </div>
          <%} else {%>
            <div class="login-register"><a href="/login" class="login-btn"> login</a> <a href="/register">Join Up</a></div>
          <%}%>
        </div>
      </nav>
